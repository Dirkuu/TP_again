<Window x:Class="Zad4.VIew.EditClient"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Zad4.VIew"
        mc:Ignorable="d"
        Title="EditClient" Height="123.566" Width="585.144">
    <Grid DataContext="{StaticResource UserViewModel}">
        <TextBox Text="{Binding NewFirstName}" HorizontalAlignment="Left" Margin="11,10,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="50"/>
        <TextBox HorizontalAlignment="Left" Margin="163,10,0,0" TextWrapping="Wrap" Text="{Binding NewLastName}" VerticalAlignment="Top" Width="59"/>
        <TextBox HorizontalAlignment="Left" Margin="88,10,0,0" TextWrapping="Wrap" Text="{Binding Coins}" VerticalAlignment="Top" Width="54"/>
        <Button Command="{Binding UpdateClient, UpdateSourceTrigger=PropertyChanged}" Content="Edit Client" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Margin="309,13,0,0"/>
        <Label Content="Cash" HorizontalAlignment="Left" Margin="88,41,0,0" VerticalAlignment="Top" Width="74"/>
        <Label Content="FirstName" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="11,41,0,0"/>
        <Label Content="LastName" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="163,41,0,0"/>

    </Grid>
</Window>
